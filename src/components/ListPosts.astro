---
import { formatBlogPosts } from "../js/utils";

const allPosts = await Astro.glob("../pages/publicaciones/*.md");
const formattedPosts = formatBlogPosts(allPosts);
---

<h4>Últimas publicaciones</h4>
<div>
	{
		formattedPosts.map((post: any, index: any) => {
			return index < 8 ? (
				<a href={post.url} title={post.frontmatter.title} class="anin-rapido">
					{post.frontmatter.title}
				</a>
			) : null;
		})
	}
	<a href="/publicaciones/" class="anin-rapido" title="Ver más"
		><span class="material-symbols-sharp">feed</span> Ver más</a
	>
</div>

<style lang="stylus">
	/* Contenedor de Publicaciones */
	div
		width 100%
		display flex
		flex-wrap wrap
		justify-content flex-start
		align-items center
		gap 1rem

	a
		background rgb(103, 61, 230)
		color #FFF
		padding 1vw
		border-radius 0.2vw
		border 0
		transition all .1s ease-in-out
		font-size 1vw
		font-weight 400
		line-height 120%
		text-align center
		display flex
		align-items center
		gap 1rem
		&:hover
			color #FFF
			background rgb(8, 12, 63)
		&:last-child
			background rgb(230, 61, 103)
			&:hover
				background rgb(8, 12, 63)
	
	/* Responsive Design */
	@media screen and (max-width:1920px)
		a
			font-size 1em
			padding 1rem
</style>
