@keyframes menu
	from
		opacity 0
		top -100%
	to
		opacity 1

@keyframes top
	from
		opacity 0
		bottom 100px
	to
		opacity 1
		bottom 0

@keyframes bottom
	from
		opacity 0
		top 100px
	to
		opacity 1
		top 0

@keyframes left
	from
		opacity 0
		left 100px
	to
		opacity 1
		left 0
  
@keyframes right
	from
		opacity 0
		right 100px
	to
		opacity 1
		right 0