@charset "UTF-8"

/* importando reset */
@import "../styles/reset.styl";

/* Variables */
/* Colores */
blueDev-50 = #d6d9fa
blueDev-100 = #c4c8f8
blueDev-200 = #9ba1f2
blueDev-300 = #777fee
blueDev-400 = #4e59e9
blueDev-500 = #2a37e4
blueDev-600 = #1925c7
blueDev-700 = #141d9e
blueDev-800 = #0f177a
blueDev-900 = #0a0f51
blueDev-950 = #080c3f
eWhite = #F2F2F2
eRed = #e63d67

/* Medidas */
onespace = clamp(16px, 1vw, 1.1vw)
twospace = clamp(32px, 2vw, 2.1vw)
thirdpace = clamp(48px, 3vw, 3.1vw)
fourtspace = clamp(64px, 4vw, 4.1vw)

thinline = solid clamp(1px, 0.1vw, 0.2vw)
radius = clamp(3px, 0.2vw, 0.3vw)

/* Estilos ScrollBar */
::-webkit-scrollbar
  width auto

::-webkit-scrollbar-track
  background blueDev-50

::-webkit-scrollbar-thumb
	border-radius radius
	background blueDev-800

/* Titulos */
h1,h2,h3,h4,h5,h6
	text-transform uppercase
	line-height 120%
	letter-spacing 1pt
	padding onespace 0 onespace 0
	margin-bottom onespace

h1
	font-size clamp(32px, 2vw, 2.1vw)
	font-weight 900
h2
	font-size clamp(28px, 1.8vw, 1.9vw)
	font-weight 800
h3
	font-size clamp(24px, 1.6vw, 1.7vw)
	font-weight 700
h4
	font-size clamp(20px, 1.4vw, 1.5vw)
	font-weight 600
h5
	font-size clamp(18px, 1.2vw, 1.3vw)
	font-weight 500
h6
	font-size clamp(16px, 1vw, 1.1vw)
	font-weight 400

/* enlaces */
a
	transition all 0.2s ease-in-out
	&:hover
		color blueDev-500

p
	a
		transition all 0.2s ease-in-out
		border-bottom thinline blueDev-950
		&:hover
			opacity 0.8

/* Estilos de Body */
body
	font-size clamp(16px, 1vw, 1.1vw)
	font-weight 300
	line-height 120%
	hyphens none
	background eWhite
	font-family 'Outfit', Helvetica, Arial, sans-serif
	font-display swap
	color blueDev-950
	background linear-gradient(90deg, eWhite 20px, transparent 1%) center, linear-gradient(eWhite 20px, transparent 1%) center, rgba(61, 188, 230, 0.4)
	background-size 22px 22px

/* Estilos componente MainMenuView */
@import "../styles/MainMenuView.styl"

/* Estilos componente MainTitlesView */
@import "../styles/MainTitlesView.styl";

/* Estilos componente CallView */
@import "../styles/CallView.styl";
		
/* Contenedor principal de contenido */
#main-content
	width 100%
	min-height 100vh
	padding fourtspace 0 fourtspace 0

main
	scroll-snap-type y proximity
	scroll-padding-top thirdpace
	section
		margin-bottom fourtspace
		scroll-snap-align start
		display flex
		justify-content center
	article
		display flex
		flex-direction column
		width 90%
	.parrafo
		max-width 900px
		margin-bottom twospace
	p
		padding-bottom onespace
	strong
		font-weight 600

/* Proyectos en Index */
.marcas-container
	display flex
	justify-content space-between
	flex-wrap wrap
	padding-top twospace
	a
		&:hover img
			filter grayscale(0%)
			opacity 1
	img
		height auto
		width 100%
		min-width 48px
		filter grayscale(100%)
	/* Para logos de color negro */
	.desaturar
		opacity 0.4

/* Estilos de componente ListPosts - InfoContact - IconSocial - CategoryCloud*/
address
	font-style normal
	a
		text-transform lowercase !important

.lista-enlaces
	width 100%
	display flex
	flex-wrap wrap
	justify-content space-between
	gap onespace
	margin-bottom onespace
	a
		text-transform capitalize
		border thinline blueDev-100
		padding onespace
		border-radius radius
		&:hover
			color eWhite
			background blueDev-500
	.ultimo-enlace
		color eWhite
		background blueDev-500
		&:hover
			color eWhite
			background blueDev-800

/* estilos componente FooterView */
#footer
	margin 0 auto
	padding twospace 0 twospace 0
	text-align right
	width 90%

/* Páginas presentación y portafolio
 	Navegación por página */
.navigator
	display flex
	justify-content center
	margin-bottom fourtspace
	ol
		width 90%
		display flex
		justify-content space-between

/* Contenedor de uls */
.wrapper-ul
	display flex
	flex-wrap wrap
	justify-content space-between
	gap onespace
	div
		max-width 45%
	li
		line-height 160%
		list-style disc inside

/* Pagina de portafolio*/
.wrapper-gallery-work
	display flex
	flex-wrap wrap
	justify-content space-between
	width 100%
	gap twospace

.gallery-cell
	width 30%
	padding 0 onespace 0 onespace
	border-radius radius
	outline thinline blueDev-50
	&:hover
		background blueDev-50
		img
			transform scale(1.1)
			filter grayscale(0)
	figure
		text-align center
	figcaption
		color transparent
	img
		height auto
		width 100%
		filter grayscale(1)
		transition all 0.2s ease-in-out
	h3
		text-align center

/* Pagina de Publicaciones */
/* estilos componente AdsArea */
.ads-area
	padding onespace
	margin twospace 0 twospace 0

/* estilos componente Pagination */
.pagination
	width 100%
	height auto
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	gap 0 twospace
	padding onespace 0 onespace 0
	a
		background blueDev-50
		border-radius radius
		padding onespace
		letter-spacing 1pt
		&:hover
			background blueDev-950
			color eWhite
			&:nth-child(odd)
				transform translatex(-.4rem)
			&:nth-child(even)
				transform translatex(.4rem)

.wrapper-post
	display flex
	flex-wrap wrap
	justify-content space-between
	gap onespace
	padding onespace 0 onespace 0
	article
		width 48%
		padding onespace
		outline thinline blueDev-50
		border-radius radius
		&:hover
			background blueDev-50
	a
		display flex
		flex-wrap wrap
		justify-content space-between
		gap onespace
		&:hover
			color inherit
	h3
		width 100%
	figure
		width 35%
		display flex
	figcaption
		position absolute
		background blueDev-950
		border-radius 0 0 radius 0
		color eWhite
		padding onespace
	img
		width 100%
		height 25vh
		object-fit cover
	div
		width 60%

.aside-bottom
	padding twospace 0 twospace 0

/* Layout Blog */
.wrapper-content
	width 90%
	margin 0 auto
	display flex
	justify-content space-between
	gap twospace
	main
		width 70%
	aside
		width 25%

/* Estilos de MD */
#wrapper-post
	ul
		display flex
		width 100%
		flex-flow column wrap
		padding onespace 0 onespace 0
	li
		list-style disc inside
		&::marker
			color eRed
	figure
		display flex
		flex-direction column
		align-items center
		padding twospace 0 twospace 0
		width 100%
	img
		width auto/9
		height auto
		max-width 30vw
	figcaption
		padding-top onespace

/* Container Iframe */
.wrapper-iframe
	margin-top 2vh
	position relative
	overflow hidden
	width 100%
	padding-top 56.25%
	iframe
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		width 100%
		height 100%

/* Informacion y Publicidad */
.aside-blog
	div
		margin-bottom twospace
	.info-post
		img
			margin-bottom twospace

/* Componente RelatedPost */
#related-post
	width 100%
	display flex
	flex-wrap wrap
	gap onespace
	padding onespace
	a
		display flex
		flex-flow column wrap
		gap onespace
		background blueDev-50
		padding onespace
		border-radius radius
		text-align center
		&:hover
			color eWhite
			background eBlueDeep
	span
		font-size clamp(16px, 0.8vw, 0.9vw)
		opacity .7

/* Responsive Design */
@media (max-width: 1920px)	
	/* Componente IconSocial */
	#icon-social
		a
			border-radius 0.2vw
			transform scale(1)
			&:hover
				transform scale3d(1.2, 1.2, 1)

@media (max-width: 1024px)
	/* Portafolio */
	/* Wrapper Gallery */
	.gallery-cell
		img
			filter grayscale(0)

	/* Layout Blog */
	.wrapper-content
		flex-direction column
		justify-content center
		main
			width 100%
		aside
			width 100%
	
	/* Informacion y Publicidad */
	.aside-blog
		background blueDev-50
		h4
			text-align center
		.info-post
			display flex
			flex-direction column
			justify-content center
			align-items center
			img
				max-width 50%

@media (max-width: 768px)
	/* Marcas */
	.marcas-container
		figure
			width 42%
		img
			filter grayscale(0%)
		.desaturar
			opacity 1
		a
			flex-direction row-reverse
			justify-content center
		figcaption
			display none

	/* Navegación por página */
	/* Páginas presentación y portafolio */
	.navigator
		display none
	
	/* Contenedor de uls */
	.wrapper-ul
		div
			max-width 100%
	
	/* Portafolio */
	/* Wrapper Gallery */
	.gallery-cell
		width 100%
	
	/* Pagina de Publicaciones */
	.wrapper-post
		article
			width 100%
			h2
				text-align center
			figcaption
				text-align center
			figure
				width 100%
			img
				height auto
			div
				width 100%