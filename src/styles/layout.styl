@charset "UTF-8"

/* Variables */
/* Colores */
eRed = #e63d67
eSkyBlue = #3dbce6
eBlue = #673de6
eBlueDeep = #080c3f
eWhite = #F2F2F2
eGray = #bfeee7
egray1 = rgba(0,0,0,0.1)
egray3 = rgba(0,0,0,0.3)

/* Estilos ScrollBar */
::-webkit-scrollbar
  width 15px

::-webkit-scrollbar-track
  background rgb(191, 238, 231)

::-webkit-scrollbar-thumb
	border-radius 5px
	background gray

/* Medidas */
gap1 = clamp(16px, 1vw, 1.1vw)
gap2 = clamp(32px, 2vw, 2.1vw)

padding1 = clamp(16px, 1vw, 1.1vw)
padding2 = clamp(32px, 2vw, 2.1vw)
padding4 = clamp(48px, 4vw, 4.1vw)

margin2 = clamp(32px, 2vw, 2.1vw)
margin4 = clamp(64px, 4vw, 4.1vw)

border1 = solid clamp(1px, 0.1vw, 0.2vw) eBlueDeep

radius = clamp(3px, 0.2vw, 0.3vw)

/* enlace */
p
	a
		transition all 0.2s ease-in-out
		border-bottom border1
		&:hover
			opacity 0.8

/* Estilos de Body */
body
	font-size clamp(16px, 1.1vw, 1.2vw)
	font-weight 400
	line-height 140%
	hyphens none
	background eWhite
	font-family 'Outfit', Helvetica, Arial, sans-serif
	font-display swap
	color eBlueDeep
	background linear-gradient(90deg, eWhite 20px, transparent 1%) center, linear-gradient(eWhite 20px, transparent 1%) center, rgba(61, 188, 230, 0.4)
	background-size 22px 22px

/* Componente MainMenuView */
.input-menu,.open-menu,.closed-menu
	display none

/* Menu */
#main-menu
	display flex
	align-items center
	width 100%
	margin 0 auto
	position fixed
	background rgba(255, 255, 255, 0.8)
	backdrop-filter blur(8px)
	z-index 1
	padding padding1 0 padding1 0
	.logo
		height auto
		display flex
		justify-content center
		width 20%
		img
			height 3vh
			width auto
	menu
		width 80%
		display flex
		justify-content space-around
		align-items center
		gap gap1
	li
		display flex
		justify-content center
		align-items center
		a
			cursor pointer
			letter-spacing 1pt
			font-size clamp(16px, 1vw, 1.1vw)
			&:hover
				color eBlue

.li-current
	color eRed

/* Componente HgroupView */
#main-header
	height auto
	padding clamp(128px, 10vw, 10.1vw) 0 clamp(80px, 2vw, 2.1vw) 0
	width 100%

.wrapper-h1-h2
	margin 0 auto
	width 90%
	max-width 1920px
	display flex
	flex-flow column wrap
	gap gap1
	.title
		position relative
		font-size clamp(38px, 5.2vw, 5.3vw)
		line-height 100%
		font-weight 200
		animation titulo1 0.2s ease-in-out both
	.subtitle
		position relative
		font-size clamp(24px, 1.8vw, 1.9vw)
		font-weight 300
		line-height 140%
		animation titulo2 0.2s ease-in-out both
		animation-delay 0.2s
	a
		display inline
		border-bottom border1
		&:hover
			color eBlue
	
/* Animaciones */
/* H1 y H2 */
@keyframes titulo1
	from
		opacity 0
		bottom 100px
	to
		opacity 1
		bottom 0

@keyframes titulo2
	from
		opacity 0
		bottom 50px
	to
		opacity 1
		bottom 0

/* Componente CallView */
#bottom-call
	display flex
	justify-content center
	width 100%
	animation callme 0.2s ease-in-out both
	div
		display flex
		justify-content flex-end
		width 90%
		max-width 1920px
	p
		font-weight 300
	a
		font-size clamp(16px, 1vw, 1.1vw)
		padding padding1
		border-radius radius
		background egray1
		font-weight 600
		letter-spacing 1pt
		gap gap1
		transition all 0.2s ease-in-out
		&:hover
			color eWhite
			background eBlueDeep

/* Animaciones */
/* callme */
@keyframes callme
	from
		opacity 0
	to
		opacity 1
		
/* Contenedor principal de página */
#main-content
	width 100%
	padding padding4 0 padding4 0
	/* Contenedor de sections*/
	main
		width 90%
		max-width 1920px
		margin 0 auto
	section
		margin-bottom margin4
	header
		margin-bottom margin2
		h2
			font-size clamp(28px, 1.8vw, 1.9vw)
			font-weight 300
	h3
		font-size clamp(24px, 1.4vw, 1.5vw)
		line-height 120%
		font-weight 300
		margin padding2 0 padding2 0
	h4
		font-size clamp(20px, 1.2vw, 1.3vw)
		margin padding2 0 padding2 0
	article
		article
			p
				padding-bottom padding1
				font-weight 300
			ul
				padding-bottom padding2
			li
				font-size clamp(18px, 1.2vw, 1.3vw)
				line-height 160%
				font-weight 300
				list-style disc inside

/* Marcas */
.marcas-container
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	padding-top padding2
	gap gap2
	figure
		width 22%
		&:hover img
			filter grayscale(0%)
			opacity 1
	a
		display flex
		flex-direction column
		align-items center
		gap gap2
	img
		min-width 100px
		width 4vw
		max-width 180px
		filter grayscale(100%)
	/* Para marcas de color negro */
	.desaturar
		opacity 0.4
	figcaption
		letter-spacing 1pt

/* Componente ListPosts */
#list-posts
	width 100%
	display flex
	flex-wrap wrap
	justify-content flex-start
	align-items center
	gap gap1
	a
		background egray1
		padding padding1
		border-radius radius
		transition all 0.2s ease-in-out
		text-align center
		display flex
		align-items center
		gap gap1
		&:hover
			color eWhite
			background eBlueDeep
		&:last-child
			background egray3
			&:hover
				color eWhite
				background eBlueDeep

/* Componente IconSocial */
#icon-social
	width 100%
	margin margin2 0 margin2 0
	display flex
	flex-wrap wrap
	justify-content space-around
	gap gap1
	a
		border-radius radius
		color transparent
		font-size 0
		height 48px
		text-indent -99999999px
		transform scale(2)
		width 48px
		background url(/img/icon-social.svg) no-repeat egray3
		background-size auto 100%
		&:nth-child(1)
			background-position 0 0
		&:nth-child(2)
			background-position -48px 0
		&:nth-child(3)
			background-position -96px 0
		&:nth-child(4)
			background-position -143px 0
		&:nth-child(5)
			background-position -192px 0
		&:nth-child(6)
			background-position -242px 0
		&:nth-child(7)
			background-position -287px 0
		&:nth-child(8)
			background-position -336px 0
		&:hover
			background-color eBlueDeep
			transform scale3d(2.2, 2.2, 1)

/* conjunto de enlaces  */
.enlaces
	display flex
	flex-wrap wrap
	gap gap1
	a
		padding padding1
		border-radius radius
		transition all 0.2s ease-in-out
		font-weight 400
		background egray1
		&:hover
			color eWhite
			opacity 1
			background eBlueDeep

/* componente InfoContact */
.info-contact
	width 100%
	margin margin2 0 margin2 0
	address
		display flex
		flex-direction column
		gap gap1 0
	li
		display flex
		flex-wrap wrap
		gap 0 gap2
	strong
		font-weight 500
		align-self center
		width 6vw
		min-width 100px
	a
		background egray1
		padding padding1
		border-radius radius
		transition all 0.2s ease-in-out
		font-style normal
		display flex
		align-items center
		gap gap1
		&:hover
			color eWhite
			background eBlueDeep

/* Navegación por página */
/* Páginas presentación y portafolio */
.navigator
	display flex
	justify-content center
	margin-bottom margin4
	ol
		width 100%
		display flex
		justify-content space-between
	li
		display flex
		height 4vh
	a
		align-self center
		letter-spacing 1pt
		font-weight 300
		display flex
		align-items center
		background egray1
		padding padding1
		border-radius radius
		gap gap1
		transition all 0.2s ease-in-out
		&:hover
			color eWhite
			background rgb(8, 12, 63)

/* Pagina de presentacion */
/* Contenedor de uls */
.wrapper-ul
	display flex
	flex-wrap wrap
	justify-content space-between
	width 100%
	div
		max-width 45%

/* Pagina de portafolio*/
.wrapper-gallery-work
	display flex
	flex-wrap wrap
	justify-content space-between
	width 100%
	gap gap2

.gallery-cell
	width 30%
	padding padding1
	border-radius radius
	outline border1
	&:hover
		img
			transform scale(1.1)
			filter grayscale(0)
	figure
		text-align center
	figcaption
		color transparent
	img
		height auto
		width 100%
		width auto/9
		filter grayscale(1)
		transition all 0.2s ease-in-out
	h3
		text-align center
	p
		font-size clamp(18px, 1vw, 1.1vw)

/* Componente AdsArea */
.ads-area
	margin margin2 0 margin2 0

/* Componente Pagination */
.pagination
	width 100%
	height auto
	display flex
	flex-wrap wrap
	justify-content center
	align-items center
	gap 0 gap2
	padding padding1 0 padding1 0
	a
		background egray1
		border-radius radius
		padding padding1
		display flex
		justify-content center
		align-items center
		gap 0 gap1
		letter-spacing 1pt
		&:hover
			background eBlueDeep
			color eWhite
			&:nth-child(odd)
				transform translatex(-.4rem)
			&:nth-child(even)
				transform translatex(.4rem)

/* Pagina de Publicaciones */
.wrapper-post
	display flex
	flex-wrap wrap
	gap gap1
	article
		width 49%
		padding gap1
		a
			display flex
			flex-wrap wrap
			justify-content space-between
		h2
			width 100%
			font-size clamp(24px, 1.8vw, 1.9vw)
			font-weight 300
			line-height 100%
			padding-bottom padding2
		figure
			width 35%
			display flex
			flex-direction column
			gap gap1
		img
			width 100%
			height 12vh
			object-fit cover
		figcaption
			color eBlueDeep
			font-weight 300
		div
			width 60%
		p
			font-weight 300
			font-size clamp(16px, 1vw, 1.1vw)
		strong
			font-weight 500

/* Estilos de MD */
#wrapper-post
	h1
		font-size clamp(22px, 1.6vw, 1.7vw)
		padding padding1 0 padding1 0
	h2
		font-size clamp(20px, 1.4vw, 1.5vw)
		padding padding1 0 padding1 0
	h3
		font-size clamp(18px, 1.2vw, 1.3vw)
		padding padding1 0 padding1 0
	p
		padding-bottom padding1
	ul
		display flex
		width 100%
		flex-flow column wrap
		padding padding1 0 padding1 0
	li
		list-style disc inside
		&::marker
			color eRed
	figure
		display flex
		flex-direction column
		align-items center
		padding padding2 0 padding2 0
		width 100%
	img
		width auto/9
		height auto
		max-width 30vw
	figcaption
		padding-top padding1
	a
		display inline
		transition all 0.2s ease-in-out
		border-bottom border1
		&:hover
			opacity 0.8

.aside-bottom
	padding padding2 0 padding2 0
	width 100%

/* Componente CategoryCloud */
.category-cloud
	width 100%
	display flex
	flex-wrap wrap
	justify-content flex-start
	align-items center
	gap gap1
	a
		background egray1
		text-transform capitalize
		padding padding1
		border-radius radius
		transition all 0.2s ease-in-out
		&:hover
			color eWhite
			background eBlueDeep

/* Layout Blog */
.wrapper-content
	display flex
	justify-content space-between
	gap gap2
	main
		width 70%
	aside
		width 25%

/* Container Iframe */
.wrapper-iframe
	margin-top 2vh
	position relative
	overflow hidden
	width 100%
	padding-top 56.25%
	iframe
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		width 100%
		height 100%

/* Informacion y Publicidad */
.aside-blog
	div
		margin-bottom margin2
	.info-post
		img
			margin-bottom margin2
		strong
			font-weight 500
		p
			font-weight 300
			font-size clamp(16px, 1vw, 1.1vw)
			padding-bottom padding1

/* Componente RelatedPost */
#related-post
	width 100%
	display flex
	flex-wrap wrap
	justify-content flex-start
	align-items center
	gap gap1
	a
		display flex
		flex-flow column wrap
		gap gap1
		background egray1
		padding padding1
		border-radius radius
		transition all 0.2s ease-in-out
		text-align center
		&:hover
			color eWhite
			background eBlueDeep
	span
		font-size clamp(16px, 0.8vw, 0.9vw)
		opacity .7

/* Componente Footer */
#footer
	font-weight 500
	height auto
	margin 0 auto
	padding padding2 0 padding2 0
	text-align right
	max-width 1920px
	width 90%

/* Responsive Design */
@media screen and (max-width:1920px)	
	/* Componente IconSocial */
	#icon-social
		a
			border-radius 0.2vw
			transform scale(1)
			&:hover
				transform scale3d(1.2, 1.2, 1)

@media screen and (max-width:1024px)
	/* Portafolio */
	/* Wrapper Gallery */
	.gallery-cell
		img
			filter grayscale(0)

	/* Layout Blog */
	.wrapper-content
		flex-direction column
		justify-content center
		main
			width 100%
		aside
			width 100%
	
	/* Informacion y Publicidad */
	.aside-blog
		background eGray
		h4
			text-align center
		.info-post
			display flex
			flex-direction column
			justify-content center
			align-items center
			img
				max-width 50%

@media screen and (max-width:768px)
	/* Componente MainMenuView */
	#main-menu
		.logo
			width 100%
			img
				height 4vh
		menu
			display none
		li
			width 100%
			display flex
			justify-content center
			align-items center
			border-bottom solid 1px eSkyBlue
			&:last-child
				border 0
			a
				padding padding1
		.open-menu, .closed-menu
			user-select none
			cursor pointer
			display block
			color eSkyBlue
			position fixed
			right 4vw
			img
				max-width 48px
				height auto
		.closed-menu
			display none
	
	.input-menu:checked ~ #main-menu
		.open-menu
			display none
		.closed-menu
			display block
		menu
			display flex
			width 100%
			background eWhite
			top 8vh
			flex-direction column
			position fixed
	
	/* Marcas */
	.marcas-container
		figure
			width 42%
		img
			filter grayscale(0%)
		.desaturar
			opacity 1
		a
			flex-direction row-reverse
			justify-content center
		figcaption
			display none

	/* Navegación por página */
	/* Páginas presentación y portafolio */
	.navigator
		display none
	
	/* Contenedor de uls */
	.wrapper-ul
		div
			max-width 100%
	
	/* Portafolio */
	/* Wrapper Gallery */
	.gallery-cell
		width 100%
	
	/* Pagina de Publicaciones */
	.wrapper-post
		article
			width 100%
			h2
				text-align center
			figcaption
				text-align center
			figure
				width 100%
			img
				height auto
			div
				width 100%

@media screen and (max-width:420px)
	.info-contact
		li
			align-items start
			flex-direction column
		strong
			align-self start