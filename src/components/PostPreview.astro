---
import { formatDate } from "../js/utils";

const { post } = Astro.props;
---

<article>
    <a href={post.url} title={post.frontmatter.title}>
        <h2>
            {post.frontmatter.title}
        </h2>
        <figure>
            <img
                src={post.frontmatter.image.url}
                alt={post.frontmatter.image.alt}
                loading="lazy"
            />
            <figcaption>
                Publicado el: <br />
                <time datetime={formatDate(post.frontmatter.date)}
                    ><strong>{formatDate(post.frontmatter.date)}</strong></time
                >
            </figcaption>
        </figure>
        <div>
            <p>
                {post.frontmatter.description.slice(0, 220)}...
            </p>
            <p>Categor√≠a: <strong>{post.frontmatter.category}</strong></p>
        </div>
    </a>
</article>

<style lang="stylus">
    article
        width 49%
        padding 1vw
        a
            display flex
            flex-wrap wrap
            justify-content space-between
            color rgb(61, 188, 230)
            &:hover
                color rgb(8, 12, 63)
        h2
            width 100%
            font-size 1.2vw
            line-height 120%
            font-weight 500
            hyphens none
            padding-bottom 1.2vh
        figure
            width 35%
            display flex
            flex-direction column
            gap 1rem
        img
            width 100%
            height 12vh
            object-fit cover
        figcaption
            font-size 1vw
            line-height 120%
            color rgb(8, 12, 63)
            font-weight 300
        div
            width 60%
        p
            color rgb(8, 12, 63)
            font-size 1vw
            line-height 120%
            hyphens none
            font-weight 300
        strong
            font-weight 600
    
    /* Responsive Design */  
    @media screen and (max-width:1024px)
        article
            h2
                font-size 2vw
            figcaption
                font-size 1em
            p
                font-size 1em

    @media screen and (max-width:768px)
        article
            width 100%
            h2
                font-size 1.6em
                text-align center
            figcaption
                text-align center
                padding 1rem
            figure
                width 100%
            img
                height auto
            div
                width 100%
</style>
