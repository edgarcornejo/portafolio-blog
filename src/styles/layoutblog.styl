/* Layout Blog */
/* Cabecera de página */
.header-page
    display flex
    flex-direction column
    gap 1rem 0
    width 90%
    max-width 1920px
    padding-top 8rem
    text-align center
    margin 0 auto
    /* Titulo de página H1 */
    h1 
        font italic 300 8rem Ubuntu
        color rgb(230, 61, 103)
    /* Descripcion de página H2 */
    h2
        font 300 4rem/1 Ubuntu
        letter-spacing -1pt
        color rgb(61, 188, 230)

/* Espacio de publicidad */
.space-ads-horizontal
    padding 2rem
    margin 4rem auto
    max-width 1920px

.space-ads-vertical
    padding 2rem
    margin 2rem auto

/* Contenedor de página */
.wrapper-content
    width 90%
    max-width 1920px
    margin 0 auto
    display flex
    justify-content center
    padding 10rem 0 10rem 0

/* Contenido */
main
    width 100%

/* Informacion y Publicidad */
aside
    width 20%
    padding 2rem
    h4
        font italic 300 2.4rem Ubuntu
        padding 1rem

/* Post solo*/
.wrapper-post
    display flex
    flex-wrap wrap
    h1
        font 500 5rem/1.2 Ubuntu
        margin-bottom 4rem
        padding-bottom 1rem 
        width 100%
        border-bottom solid 4px rgb(230, 61, 103)
    h2
        font 400 4rem/1.2 Ubuntu
        margin-bottom 2rem
        padding 4rem 0 1rem 0
        width 100%
        border-bottom solid 4px rgb(230, 61, 103)
    p 
        font 300 3rem/1.2 Ubuntu
        padding 1rem 0 1rem 0
    ul
        display flex
        width 100%
        flex-flow column wrap
    li
        list-style disc inside
        font 300 3rem/1.4 Ubuntu
        &::marker
            color rgb(230, 61, 103)
    figure
        display flex
        flex-direction column
        align-items center
        padding 2rem 0 2rem 0
        width 100%
    img
        width auto/9
        height auto
        max-width 1024px
    figcaption
        padding-top 1rem
        font italic 300 2rem/1.2 Ubuntu
    /* Container Iframe */
    .wrapper-iframe
        margin-top 2rem
        position relative
        overflow hidden
        width 100%
        padding-top 56.25%
        iframe
            position absolute
            top 0
            left 0
            bottom 0
            right 0
            width 100%
            height 100%

/* Responsive Design */
@media screen and (max-width:2560px)
    /* Post solo*/
    .wrapper-post
        h1
            font 500 4rem/1.2 Ubuntu
        h2
            font 400 3rem/1.2 Ubuntu
        p 
            font 300 2.2rem/1.2 Ubuntu
        li
            font 300 2.2rem/1.4 Ubuntu


@media screen and (max-width:1920px)
    /* Cabecera de página */
    .header-page
        /* Titulo de página H1 */
        h1
            font italic 300 5rem Ubuntu
        /* Descripcion de página H2 */
        h2
            font 300 3rem/1 Ubuntu

    /* Contenedor de página */
    .wrapper-content
        padding 0

    /* Informacion y Publicidad */
    aside
        padding 1.4rem
        h4
            font italic 300 1.8rem Ubuntu
    
    /* Espacio de publicidad */
    .space-ads-horizontal, .space-ads-vertical
        padding 1.4rem

    /* Post solo*/
    .wrapper-post
        h1
            font 500 3rem/1.2 Ubuntu
        h2
            font 400 2.6rem/1.2 Ubuntu
        p 
            font 300 1.8rem/1.2 Ubuntu
        li
            font 300 1.8rem/1.4 Ubuntu
        figcaption
            font italic 300 1rem/1.2 Ubuntu

@media screen and (max-width:1440px)
    /* Cabecera de página */
    .header-page
        padding-top 4rem
        /* Titulo de página H1 */
        h1
            font italic 300 4rem Ubuntu
        /* Descripcion de página H2 */
        h2
            font 300 2.2rem/1 Ubuntu

    /* Informacion y Publicidad */
    aside
        padding 1rem
        h4
            font italic 300 1.2rem Ubuntu
            padding 0

    /* Espacio de publicidad */
    .space-ads-horizontal, .space-ads-vertical
        padding 1.2rem

    /* Post solo*/
    .wrapper-post
        h1
            font 500 2rem/1.2 Ubuntu
            border-bottom solid 1px rgb(230, 61, 103)
        h2
            font 400 1.6rem/1.2 Ubuntu
            border-bottom solid 1px rgb(230, 61, 103)
        p 
            font 300 1.2rem/1.2 Ubuntu
        li
            font 300 1.2rem/1.4 Ubuntu

@media screen and (max-width:1024px)
    /* Cabecera de página */
    .header-page
        padding-top 3rem
        /* Titulo de página H1 */
        h1
            font italic 300 2.2rem Ubuntu
        /* Descripcion de página H2 */
        h2
            font 300 1.6rem/1 Ubuntu
    
    /* Informacion y Publicidad */
    aside
        display none

    /* Post solo*/
    .wrapper-post
        img
            width 50%

@media screen and (max-width:768px)
    /* Post solo*/
    .wrapper-post
        img
            width 90%