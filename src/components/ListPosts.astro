---
import { formatDate } from "../js/utils";

const { post } = Astro.props;
---

<a href={post.url} title={post.frontmatter.title} class="anin-rapido"
	>{post.frontmatter.title}</a
>
<time class="ocultar-time" datetime={formatDate(post.frontmatter.date)}
	>Publicado el: {formatDate(post.frontmatter.date)}</time
>

<style lang="stylus">
    /* Ocultar time */
	.ocultar-time
		display none
		font-size 0
		visibility hidden
</style>
