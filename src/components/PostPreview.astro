---
const { post } = Astro.props;
---

<article>
    <a href={post.url} title={post.frontmatter.title}>
        <h2>
            {post.frontmatter.title}
        </h2>
        <figure>
            <img
                src={post.frontmatter.image.url}
                alt={post.frontmatter.alt}
                loading="lazy"
            />
            <figcaption>
                <time
                    >Publicado el: <br />{
                        post.frontmatter.pubDate.slice(0, 10)
                    }</time
                >
            </figcaption>
        </figure>
        <div>
            <p>
                {post.frontmatter.description.slice(0, 220)}...
            </p>
        </div>
    </a>
</article>

<style lang="stylus">
    article
        width 49%
        padding 3rem
        a
            display flex
            flex-wrap wrap
        h2
            margin 0
            font 500 3rem/1 Ubuntu
            padding 0 0 1.8rem 0
            border 0
        figure
            width 40%
            display flex
            flex-direction column
            gap 1rem
            padding 0
        img
            max-width 199px
            height 199px
            object-fit cover
        figcaption
            padding 0
            font 500 1.4rem/1.2 Ubuntu
        time
            color rgb(8, 12, 63)
        div
            width 60%
        p
            font 300 1.8rem/1.2 Ubuntu
            color rgb(8, 12, 63)
</style>
