---
const fecha = new Date();
const year = fecha.getFullYear();
---

<footer>
	<div id="logo-footer"></div>

	<p>
		<small>
			Copyright &copy; <span>{year}</span>
			<a href="/" title="Edgar Cornejo"> Edgar Cornejo</a> | Todos los derechos reservados.
		</small>
	</p>

	<div id="social-footer">
		<a
			href="https://www.behance.net/edgarcornejo"
			title="Behance"
			target="_blank">Behance</a
		>
		<a
			href="https://www.linkedin.com/in/edgar-cornejo-cahuana-97415048/"
			title="LinkedIn"
			target="_blank">LinkedIn</a
		>
		<a
			href="https://instagram.com/devcornejo/"
			title="Instagram"
			target="_blank">Instagram</a
		>
		<a
			href="https://www.youtube.com/user/devcornejo"
			title="YouTube"
			target="_blank">YouTube</a
		>
		<a
			href="https://www.facebook.com/edgarcornejopage/"
			title="Facebook"
			target="_blank">Facebook</a
		>
		<a href="https://twitter.com/devcornejo" title="Twitter" target="_blank"
			>Twitter</a
		>
	</div>
</footer>

<style lang="stylus">
  /* Colores */
  hardWhite = #FFFFFF
  greenLiquid = #A0EAEB
  greenPastel = #6AC8C7
  greenMate = #0FAAA7
  greenPure = #0D8796
  hardGreen = #054d56

  /* Footer */
  footer
    width 100%
    height 8vh
    display flex
    align-items stretch
    justify-content space-between
    flex-wrap wrap

  #logo-footer
    background url("/designer/edgarcornejo.svg") no-repeat 50% 56% greenMate
    background-size 40%
    width 12vw
    border-radius 0 0.4vw 0 0

  /* Texto de footer */
  p
    flex-grow 2
    color greenMate
    align-self center
    small
      padding-left 3vw
      animation aparecer .5s ease-in both
      font-size .8vw
      font-weight 700
      letter-spacing .5pt
      text-transform uppercase
      animation-delay 1s

  /* Botonera Social Footer */
   #social-footer
    background greenMate
    display flex
    align-items center
    justify-content center
    width 14vw
    gap 2rem
    border-radius 0.4vw 0 0 0
    a
      background url("/img/icon-social.svg") no-repeat greenPastel
      background-size cover
      width 48px
      height 48px
      border-radius 3px
      font-size 0
      transition all 0.2s ease-out
      transform scale(1.4)
      &:hover
        background-color greenPure
      &:nth-child(1)
        background-position -48px 0
      &:nth-child(2)
        background-position 0 0
      &:nth-child(3)
        background-position -96px 0
      &:nth-child(4)
        background-position -336px 0
      &:nth-child(5)
        background-position -240px 0
      &:nth-child(6)
        background-position -288px 0

  /* Responsive Design */
  @media screen and (max-width:2560px)
    #social-footer
      width 18vw
      gap 1.4rem
      a
        transform scale(1)

  @media screen and (max-width:1920px)
    #social-footer
      width 22vw
      padding 1rem
      height auto
      gap 1rem

  @media screen and (max-width:1440px)
    #social-footer
      width 28vw

  @media screen and (max-width:1366px)
    #social-footer
      width 32vw

  @media screen and (max-width:1024px)
    footer
      height auto
      justify-content center
      flex-direction column

    #logo-footer
      height 80px
      order 3
      width 100%
      background-size 60px
      position static
      &:after
        display none

    p
      order 2
      padding 1rem
      text-align center
      hyphens none
      small
        font-size 1em

    #social-footer
      order 1
      width 100%
      justify-content center
      flex-wrap wrap
      position static
      height auto
  
</style>
