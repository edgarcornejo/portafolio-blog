---
import { formatDate } from "../js/utils";

const { post } = Astro.props;
---

<article>
    <a href={post.url} title={post.frontmatter.title}>
        <h2>
            {post.frontmatter.title}
        </h2>
        <figure>
            <img
                src={post.frontmatter.image.url}
                alt={post.frontmatter.image.alt}
                loading="lazy"
            />
            <figcaption>
                Publicado el: <br />
                <time datetime={formatDate(post.frontmatter.date)}
                    ><strong>{formatDate(post.frontmatter.date)}</strong></time
                >
            </figcaption>
        </figure>
        <div>
            <p>
                {post.frontmatter.description.slice(0, 220)}...
            </p>
            <p>Categor√≠a: <strong>{post.frontmatter.category}</strong></p>
        </div>
    </a>
</article>

<style lang="stylus">
    article
        width 49%
        padding 3rem
        a
            display flex
            flex-wrap wrap
            color rgb(61, 188, 230)
            &:hover
                color rgb(8, 12, 63)
        h2
            margin 0
            font 500 3rem/1 Ubuntu
            padding 0 0 1.8rem 0
            border 0
        figure
            width 40%
            display flex
            flex-direction column
            gap 1rem
            padding 0
        img
            width 199px
            height 199px
            object-fit cover
        figcaption
            padding 0
            font 500 1.4rem/1.2 Ubuntu
            color rgb(8, 12, 63)
        div
            width 60%
        strong
            font-weight 700
        p
            font 300 1.8rem/1.2 Ubuntu
            color rgb(8, 12, 63)
    
    /* Responsive Design */
    @media screen and (max-width:1920px)
        article
            padding 2rem
            h2
                font 500 2rem/1 Ubuntu
            p
                font 300 1.4rem/1.2 Ubuntu
    
    @media screen and (max-width:1440px)
        article
            padding 1.2rem
            h2
                font 500 1.4rem/1 Ubuntu
            img
                width 90%
                height auto
            figcaption
                font 500 1rem/1.2 Ubuntu
            p
                font 300 1rem/1.2 Ubuntu

    @media screen and (max-width:1024px)
        article
            width 100%
            img
                max-width 199px
        
    @media screen and (max-width:720px)
        article
            h2
                text-align center
            figure
                width 100%
            div
                width 100%
</style>
