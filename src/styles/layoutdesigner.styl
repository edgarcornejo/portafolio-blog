@charset "UTF-8"

@import "../styles/reset.styl"
  
/* Colores */
hardWhite = #FFFFFF
greenLiquid = #A0EAEB
greenPastel = #6AC8C7
greenMate = #0FAAA7
greenPure = #0D8796
hardGreen = #054d56

espacio1 = clamp(16px, 1vw, 1.1vw)
espacio2 = clamp(32px, 2vw, 2.1vw)
espacio3 = clamp(48px, 3vw, 3.1vw)
espacio4 = clamp(64px, 4vw, 4.1vw)

lineDelgada = solid clamp(1px, 0.1vw, 0.2vw)
lineaMedia = solid clamp(3px, 0.3vw, 0.4vw)
lineaGruesa = solid clamp(6px, 1vw, 1.4vw)

redondeado = clamp(6px, 0.4vw, 0.5vw)

/* Body */
body
  background hardWhite
  background-image repeating-linear-gradient(to right, rgba(160, 234, 235, .5), rgba(160, 234, 235, .5) 2px, hardWhite 2px, hardWhite)
  background-size 32px 32px
  width 100%
  color hardWhite
  font-size 16px
  font-family 'Open Sans',Helvetica,Arial,sans-serif
  background-color hardWhite
  z-index 0

/* Selección */
::selection
  background greenLiquid
  text-shadow none

/*
 * A better looking default horizontal rule
 */
hr
  display block
  height 1px
  border 0
  border-top 1px solid hardGreen
  margin 1em 0
  padding 0

/* Enlaces */
a
  color greenPure
  text-decoration none
  &:hover
    color hardGreen

/* Cabecera principal */
#main-header
  width 100%
  display flex
  align-items center
  gap espacio1
  border-top lineaGruesa greenMate
  z-index 1

/* Logotipo */
#logo
  background url("/designer/edgarcornejo.svg") no-repeat 50% 20% greenMate
  background-size 20%
  height 8vh
  min-height 3rem
  width 20%
  animation lefttoright 1s ease-in
  position relative
  border-radius 0 0 redondeado 0
  top clamp(-6px, -1vw, -1.4vw)

/* Título de página */
.name-title
  width 73%
  h1
    animation aparecer .5s ease-in both
    font-size clamp(28px, 1.6vw, 1.7vw)
    font-weight 700
    letter-spacing .5pt
    text-transform uppercase
    animation-delay 1s

/* Logotipo */
@keyframes lefttoright
  0%
    left -230px
  100%
    left 0

/* Animación de parecer H1 */
@keyframes aparecer
  0%
    opacity 0
  100%
    opacity 100%

/* Nav Header */
nav
  width 5%
  display flex
  align-items center
  .open-menu,.closed-menu
    user-select none
    cursor pointer
    display block
    img
      min-width 48px
      width 2vw
      height auto
      filter invert(1)
  .closed-menu
    display none
  menu
    display none
    padding-left 2rem
  a
    font-size 3rem
    font-weight 700
    color hardGreen
    transition all 0.2s ease-out
    padding 2rem
    border-bottom dashed 2px greenMate
    &:hover
      background greenLiquid
      border-radius 5px

.input-menu
  display none
  &:checked ~ nav
    .open-menu
      display none
    .closed-menu
      user-select none
      cursor pointer
      display block
    menu
      display flex
      flex-direction column
      gap 1rem
      position absolute
      top 0
      height 100vh
      right 6vw
      text-align right
      background hardWhite
      padding 2rem

/* Contenedor principal */
#main-content
  width 100%
  height auto
  margin 0 auto

/* Contenedor de artículos */
.wrapper-article
  min-height 100vh
  padding 20vh 0 20vh 0
  /* Estilos para wrapper impares */
  &:nth-child(odd)
    background greenPure
    color hardWhite
    background-size 32px 32px
    background-image repeating-linear-gradient(to right, rgba(5, 77, 86, .5), rgba(5, 77, 86, .5) 2px, greenPure 2px, greenPure)
    .wrap-txt
      opacity 0.8
  /* Estilos para wrapper pares */
  &:nth-child(even)
    figure
      justify-content flex-end
      border-bottom dashed 2px greenMate
    header
      color hardGreen
      justify-content flex-end
    .wrap-txt
      align-items flex-end
      color greenPure
      text-align right
      border-right solid 6px greenPure
      padding-right 2rem
      a
        color greenPure
        border-bottom dashed 2px greenMate
  
  /* Ariticulos */
  article
    width 90%
    max-width 1920px
    margin 0 auto
    display flex
    flex-direction column
    gap 1rem 0

  /* Imagen de Articulo */  
  figure
    margin 0 auto
    width 100%
    display flex
    justify-content flex-start
    border-bottom dashed 2px hardWhite
    img
      max-width 20%
    figcaption
      color transparent
      font-size 0
      display none

  /* Header de article H2*/
  header
    width 100%
    margin 0 auto
    display flex
    justify-content flex-start
    padding-top 6rem
    h2
      font-family 'DM Serif Display'
      font-size max(6vw, 6vw)
      font-weight 800
      line-height 90%
      letter-spacing 3pt

  /* Contenedor de texto de article */
  .wrap-txt
    width 100%
    margin 2rem auto
    display flex
    justify-content flex-start
    flex-direction column
    gap 1rem
    border-left solid 6px hardWhite
    padding-left 2rem
    p, blockquote
      font-size 3em
      font-weight 500
      line-height 140%
      font-style italic
      hyphens none
    strong
      font-weight 600
    a
      color hardWhite
      border-bottom dashed 2px hardWhite

/* Lista de servicios */
#list-services
  display flex
  justify-content center
  flex-wrap wrap
  gap 2rem 2rem
  padding-top 2rem

.item-services
  min-width 180px
  div
    margin 0 auto
    width 100px
    height 100px
    background-image url("/designer/iconos-servicios.svg")
    background-repeat no-repeat
    border-radius 25%
    transition all 0.1s ease-out
    &:hover
      transform scale(1.1)
  &:nth-of-type(2) div
    background-position center -124.42px
  &:nth-of-type(3) div
    background-position center -249px
  &:nth-of-type(4) div
    background-position center -373px
  &:nth-of-type(5) div
    background-position center -497px
  &:nth-of-type(6) div
    background-position center -622px
  &:nth-of-type(7) div
    background-position center -747px
  &:nth-of-type(8) div
    background-position center -871px
  &:nth-of-type(9) div
    background-position center -995px
  &:nth-of-type(10) div
    background-position center -1119px
  /* Titulo del servicio */
  h3
    font-size 200%
    font-weight 800
    color greenPastel
    line-height 1.4
    padding-top 1rem
    text-align center
    text-transform uppercase

/* Responsive Design */
@media screen and (max-width:2560px)
  /* Contenedor de artículos */
  .wrapper-article
    /* Imagen de Articulo */  
    figure
      img
        max-width 20%

    /* Contenedor de texto de article */
    .wrap-txt
      p, blockquote
        font-size 2em
        max-width 1366px

@media screen and (max-width:1440px)
  /* Contenedor de artículos */
  .wrapper-article
    /* Contenedor de texto de article */
    .wrap-txt
      p, blockquote
        font-size 1.4em
        max-width 1024px

  .item-services
    h3
      font-size 120%
      font-weight 600

@media screen and (max-width:1366px)
  /* Contenedor de artículos */
  .wrapper-article
    /* Header de article H2*/
    header
      padding-top 2rem
    /* Contenedor de texto de article */
    .wrap-txt
      margin 1rem auto

@media screen and (max-width:1024px)
  /* Contenedor de artículos */
  .wrapper-article
    padding 14vh 0 14vh 0
    &:nth-child(even)
      figure
        justify-content center
      header
        justify-content center
      .wrap-txt
        justify-content center
        border 0
        padding 0
        text-align left
    /* Imagen de Articulo */  
    figure
      justify-content center
      padding 1rem
      img
        max-width 40%
    /* Header de article H2*/
    header
      justify-content center
      h2
        font-size max(9vw, 9vw)
    /* Contenedor de texto de article */
    .wrap-txt
      justify-content center
      border 0
      padding 0

@media screen and (max-width:768px)
  #main-header
    flex-direction column

  #logo
    width 100%
    background url("/designer/edgarcornejo.svg") no-repeat 50% 40% greenMate
    background-size 10%
  
  .name-title
    width 100%
    text-align center
  
  nav
    position absolute
    right espacio2
    align-content center
    .open-menu,.closed-menu
      img
        filter invert(0)

  /* Contenedor de artículos */
  .wrapper-article
    min-height auto
    padding 10vh 0 10vh 0
