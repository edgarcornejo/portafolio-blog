/* Variables */
/* Colores */
eRed = rgb(230, 61, 103)
eSkyBlue = rgb(61, 188, 230)
eBlue = rgb(103, 61, 230)
eBlueDeep = rgb(8, 12, 63)
eWhite = rgb(255, 255, 255)
eGray = rgb(191, 238, 231)

/* Contenedor principal de página */
.main-content
    width 90%
    max-width 1920px
    margin 2rem auto
    /* Cabecera de página */
    & > header 
        display flex
        flex-direction column
        justify-content flex-end
        align-items center
        width 100%
        padding 10rem 0 6rem 0
        /* Titulo de página H1 */
        h1 
            font italic 300 8rem Ubuntu
            color eRed
        h2
            font 300 4rem/1 Ubuntu
            letter-spacing -1pt
            color eSkyBlue

/* Contenedor de sections*/
main
    width 100%
    margin 0 auto
    display flex
    flex-direction column
    justify-content center

/* Estilos de sections */
section
    width 100%
    padding-bottom 10rem
    /* Article Contenedor */
    article
        display flex
        flex-direction column
        /* Article para parrafos */
        article
            padding-top 6rem
            align-self center
            width 90%
    /* Headers de Articles */
    header
        border-bottom 8px solid eRed
        padding 2rem
        /* Subtitulo H2 */
        h2
            font 700 4.6rem/1 Ubuntu
            text-align right
            letter-spacing -1pt
            color eSkyBlue
    /* Subtitulo H3 */
    h3
        font 400 4.2rem/1 Ubuntu
        color eSkyBlue
    /* Subtitulo H4 */
    h4
        font 400 1.6rem/1 Ubuntu
        padding 1rem 0 1rem 0
    
/* Estilos de Parrafos en article*/
article
    article
        /* Parrafo Grande */
        .text-big
            font 400 3.2rem/1.4 Ubuntu
            letter-spacing 1pt
        /* Parrafo General */
        p
            padding 2rem 0 6rem 0
            font 300 3rem/1.4 Ubuntu
        /* Listas */
        ul
            padding 2rem 0 4rem 0
        li
            font 300 3rem/1.6 Ubuntu
            list-style disc inside
        a
            color eSkyBlue

/* Enlaces  */
.enlaces
    display flex
    flex-wrap wrap
    gap 1rem 1rem
    a
        padding 1.6rem
        outline solid 2px eSkyBlue
        border-radius 6px
        transition all .1s ease-in-out
        font 400 3rem Ubuntu
        &:hover
            color #FFF
            background eBlueDeep
            outline transparent

/* Contenedor de uls */
.wrapper-ul
    display flex
    flex-wrap wrap
    justify-content space-between
    width 100%
    div
        max-width 45%

.aside-bottom
    padding 2rem
    width 100%

/* Navegación por página */
/* Páginas presentación y portafolio */
.navigator
    position fixed
    margin-top 6rem
    left 60px
    ol
        height auto
        display flex
        flex-direction column
    li
        display flex
        height 80px
        width 100%
    a
        align-self center
        color rgb(61, 188, 230)
        padding-left 1.5rem
        text-transform uppercase
        letter-spacing 2pt
        font 700 2.2rem Ubuntu
        &:hover
            color rgb(8, 12, 63)

/* Responsive Design */
@media screen and (max-width:2560px)
    /* Navegación por página */
    /* Páginas presentación y portafolio */
    .navigator
        li
            height 60px

        a
            font 700 1.4rem Ubuntu

@media screen and (max-width:1920px)
    /* Contenedor principal de página */
    .main-content
        width 70%
        & > header
            padding 6rem 0 4rem 0
            h1
                font italic 300 5rem Ubuntu
            h2
                font 300 2.6rem/1 Ubuntu

    /* Estilos de Parrafos en article*/
    article
        article
            /* Parrafo Grande */
            .text-big
                font 300 2.4rem/1.4 Ubuntu
            /* Parrafo General */
            p
                font 300 2.2rem/1.4 Ubuntu
            /* Listas */
            ul
                li
                    font 300 2.2rem/1.6 Ubuntu

    /* Enlaces  */
    .enlaces
        a
            font 400 2.2rem Ubuntu

    /* Estilos de sections */
    section
        /* Headers de Articles */
        header
            h2
                font 700 3.6rem Ubuntu
        /* Subtitulo H3 */
        h3
            font 400 3.2rem Ubuntu

    .aside-bottom
        padding 1.4rem
    
    /* Navegación por página */
    /* Páginas presentación y portafolio */
    .navigator
        li
            height 40px

        a
            font 700 1rem Ubuntu

@media screen and (max-width:1440px)
    /* Contenedor principal de página */
    .main-content
        width 60%
        & > header
            padding 2rem 0 4rem 0
            h1
                font 300 3.8rem Ubuntu
            h2
                font 300 1.8rem/1 Ubuntu

    /* Estilos de Parrafos en article*/
    article
        article
            /* Parrafo Grande */
            .text-big
                font 300 2rem/1.4 Ubuntu
            /* Parrafo General */
            p
                padding 2rem 0 2rem 0
                font 300 1.6rem/1.2 Ubuntu
            /* Listas */
            ul
                li
                    font 300 1.6rem/1.4 Ubuntu

    /* Enlaces  */
    .enlaces
        a
            padding 1rem
            font 400 1.6rem Ubuntu

    /* Estilos de sections */
    section
        /* Headers de Articles */
        header
            border-bottom solid 5px eRed
            padding 1.6rem
            h2
                font 700 2.6rem Ubuntu
        /* Subtitulo H3 */
        h3
            font 400 2.2rem Ubuntu

    .aside-bottom
        padding 1rem

@media screen and (max-width:1366px)
    /* Contenedor principal de página */
    .main-content
        & > header
            padding 2rem 0 4rem 0
            h1
                font italic 300 3rem Ubuntu
            h2
                font 300 1.4rem/1 Ubuntu
    
    /* Estilos de sections */
    section
        /* Article Contenedor */
        article
            /* Article para parrafos */
            article
                padding-top 1rem

    /* Estilos de Parrafos en article*/
    article
        article
            /* Parrafo Grande */
            .text-big
                font 300 1.4rem Ubuntu
                letter-spacing 0
            /* Parrafo General */
            p
                padding 2rem 0 2rem 0
                font 300 1rem/1.2 Ubuntu
            /* Listas */
            ul
                li
                    font 300 1rem/1.4 Ubuntu

    /* Enlaces  */
    .enlaces
        a
            font 400 1rem Ubuntu

    /* Estilos de sections */
    section
        padding-bottom 2rem
        /* Headers de Articles */
        header
            border-bottom 2px solid eRed
            padding 1.4rem
            h2
                font 700 2rem Ubuntu
        /* Subtitulo H3 */
        h3
            font 400 1.6rem Ubuntu

@media screen and (max-width:1024px)
    /* Contenedor principal de página */
    .main-content
        width 90%
        & > header
            padding 2rem 0 2rem 0
            justify-content center
                
        /* Estilos de sections */
    section
        /* Headers de Articles */
        header
            border-right 0
            /* Subtitulo H2 */
            h2
                text-align left

    /* Navegación por página */
    /* Páginas presentación y portafolio */
    .navigator
        display none

@media screen and (max-width:480px)
    /* Contenedor de uls */
    .wrapper-ul
        div
            max-width 100%