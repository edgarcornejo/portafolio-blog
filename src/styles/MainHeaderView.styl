.container-logo-menu
	background blueDev-950
	background-size 21% 21%
	background-image repeating-linear-gradient(
		to left, 
		blueDev-800, 
		blueDev-800 4px,
		blueDev-950 4px, 
		blueDev-950)
	&:hover .wrapper-h1-h2:before
		transform translateY(200%)
	padding onespace
	display grid
	align-items center
	width 100%
	position fixed
	z-index 1
	grid-template-columns minmax(44px, 1fr) 1fr
	div
		&:first-child
			a
				display inline-block
			img
				min-height 32px
				max-height 2vw
				width auto
				transition all 0.4s ease-in-out
		&:last-child
			justify-self flex-end

.open-menu, .closed-menu
	user-select none
	cursor pointer
	transition all 0.6s ease
	img
		width 2vw
		min-width 32px
		height auto
		
.closed-menu
	display none

#main-menu
	menu
		transition all 0.4s ease allow-discrete
		display flex
		position absolute
		flex-direction column
		padding twospace
		background blueDev-950
		width 100%
		z-index -1
		opacity 0
		right 0
		top -100%
		visibility hidden
	li
		display flex
		justify-content center
		align-items center

.input-menu:checked ~ #main-menu
	.open-menu
		display none
	.closed-menu
		display flex
	menu
		transition all 0.6s ease
		position fixed
		opacity 1
		top 0
		visibility visible
		@starting-style
			opacity 0
			top -100%
			visibility hidden
	li
		width 100%
		font-size clamp(36px, 3vw, 3.1vw)
		border-bottom thinline blueDev-900
		padding onespace 0 onespace 0
	a
		cursor pointer
		letter-spacing 2pt
		color eWhite
		&:hover
			scale 1.1
			letter-spacing 0

/* estas en esta p√°gina */
.li-current
	text-transform uppercase
	font-weight 700

#main-header
	min-height 50vh
	width 100%
	display flex
	justify-content center
	align-items center
	background blueDev-950
	background-size 21% 21%
	background-image repeating-linear-gradient(
		to left, 
		blueDev-800, 
		blueDev-800 4px,
		blueDev-950 4px, 
		blueDev-950)
	&:hover .wrapper-h1-h2:before
		transform translateY(100%)

.wrapper-h1-h2
	width 90%
	display flex
	flex-flow column wrap
	color eWhite
	border-top midline eWhite
	position relative
	&:before
		content ''
		position absolute
		background eWhite
		border-radius 0 0 radius radius
		width 2vw
		height 5vw
		right 0
		transition all 0.4s ease-in-out
	.title
		font-size clamp(36px, 3vw, 3.1vw)
		position relative
		bottom 0
		opacity 1
		animation titulo1 0.4s ease both
		padding onespace 0 0 0
		margin 0
		&:after
			border-radius radius
			content ''
			position absolute
			background linear-gradient(to left, eWhite, blueDev-950)
			width 100%
			inset 0
			opacity 0.1
	.subtitle
		font-size clamp(20px, 1.4vw, 1.5vw)
		position relative
		font-weight 200
		animation titulo2 0.4s ease both
		animation-delay 0.2s
	a
		border-bottom thinline eWhite
		&:hover
			color blueDev-300

#bottom-call
	display flex
	justify-content center
	width 100%
	position relative
	animation callme 0.6s ease-in-out both
	animation-delay 0.4s
	div
		display flex
		justify-content flex-end
		width 90%
	a
		padding onespace
		border-radius radius
		background #075e54
		box-shadow shadow
		color eWhite
		font-weight 900
		letter-spacing 1pt
		gap onespace
		transition all 0.4s ease-in-out
		&:hover
			opacity 1
			box-shadow shadow-hover

/* Animaciones */
/* H1 y H2 */
@keyframes titulo1
	from
		opacity 0
		bottom 100px
	to
		opacity 1
		bottom 0

@keyframes titulo2
	from
		opacity 0
		bottom 50px
	to
		opacity 1
		bottom 0
/* callme */
@keyframes callme
	from
		opacity 0
	to
		opacity 1